<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:layout_height="96dp"
        android:src="@drawable/ic_profile_picture"/>

    <TextView
        android:id="@+id/greetingsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/profile_image"
        android:layout_alignParentStart="true"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Hello, xdejffjfjfjfjfjfjfjfjfjfaldlfqlf" />

    <Button
        android:id="@+id/addPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Add new apartment" />

    <FrameLayout
        android:id="@+id/myPostsLayout"
        android:layout_below="@id/addPostButton"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/myPostsTV"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:text="@string/my_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/changePasswordLayout"
        android:layout_below="@id/myPostsLayout"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/changePasswordTV"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:text="@string/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/changeDisplayNameLayout"
        android:layout_below="@id/changePasswordLayout"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/changeDisplayName"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:text="Change Display Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </FrameLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Logout" />

</RelativeLayout>