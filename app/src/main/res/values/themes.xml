<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ping.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ButtonPickerTheme" parent="Base.TextAppearance.AppCompat.Button">
        <!--        <item name="background">@drawable/number_picker_button_bg</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextAuthTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_rounded_bg</item>
        <item name="android:backgroundTint">@color/bg_helper</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="colorControlHighlight">@color/text_color</item>
        <item name="colorControlActivated">@color/text_color</item>
    </style>

    <style name="ErrorStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_info</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="RegularTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableTint">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="RegularTextStyleMargins" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableTint">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="BoldTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableTint">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldTextStyleMargins" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableTint">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="CounterTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_bg_4dp</item>
        <item name="android:backgroundTint">@color/black_transparent</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name ="boxCornerRadiusBottomEnd">20dp</item>
        <item name ="boxCornerRadiusBottomStart">20dp</item>
        <item name ="boxCornerRadiusTopEnd">20dp</item>
        <item name ="boxCornerRadiusTopStart">20dp</item>
        <item name ="boxStrokeWidth">0dp</item>
        <item name ="boxStrokeWidthFocused">0dp</item>
        <item name ="boxBackgroundColor">@color/bg_helper</item>
    </style>

    <style name="AppTheme.AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColor">@null</item>
    </style>
    
    <style name="NumberPickerCustomTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/text_color</item>
        <item name="colorControlNormal">@color/bg_helper</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioButtonCustom" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radio_button_square</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/buttonColorActive</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

</resources>